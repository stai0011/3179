{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 300,
    "width": 500,
    "title": "Life expectany vs GDP per capita per country",
    "data": {
      "url": "https://raw.githubusercontent.com/stai0011/3179/main/Life-Expectancy-Data-Updated.csv"
    },
    "params": [
        
        {
        "name": "Year_selection",
        "value": 2000,
        "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Select Year: "
        }   
        }, {
            "name": "Population_Above",
            "value": 0,
            "bind": {
            "input": "range",
            "min": 0,
            "max": 300,
            "step": 10,
            "name": "Minimum Population (million): "
            }
            },
        {
            "name": "Region_selection",
            "bind": {
            "input": "select",
            "options": [
            null,
            "Africa",
            "Asia",
            "Central America and Caribbean",
            "European Union", 
            "Middle East",
            "North America",
            "Oceania",
            "Rest of Europe", 
            "South America"
            ],
            "labels":[
            "Show all",
            "Africa",
            "Asia",
            "Central America and Caribbean",
            "European Union", 
            "Middle East",
            "North America",
            "Oceania",
            "Rest of Europe", 
            "South America"
            ],
            "name": "Region Selection: "
            }
            }],
    "transform":[
        {"filter": "datum.Year == Year_selection"},
        {"filter": "datum.Population_mln > Population_Above"},
        {"filter":  "Region_selection == null || datum.Region == Region_selection"}],
    "layer": [
    {"mark": "circle",
    "encoding": {
        "size": {
        "field": "Population_mln",
        "title": "Population (million)",
        "type": "quantitative",
        "scale": {
        "type": "threshold",
        "domain": [10, 50, 100, 200, 1000],
        "range": [50, 100, 200, 300, 500]
        }}
    ,

      "x": {
        "field": "GDP_per_capita",
        "title": "GDP per capita (logged value)",
        "type": "quantitative",
        "axis": { "tickCount": 10},
        "scale": {"type" : "log", "domain":[100, 115000]}
      },
      "y": {
        "field": "Life_expectancy",
        "type": "quantitative",
        "title": "Life expectancy",
        "axis": {"tickCount": 6},
        "scale": {"domain":[35, 90]}
      } ,
      
      "color": {
        "field": "Region",
        "type": "nominal",
        "scale": {
        "domain": [
          "Africa",
          "Asia",
          "Central America and Caribbean",
          "European Union", 
          "Middle East",
          "North America",
          "Oceania",
          "Rest of Europe", 
          "South America"
          ],
          "range": [
          "#1f77b4",
          "#ff7f0e",
          "#2ca02c",
          "#17becf",
          "#9467bd",
          "#f7d42a",
          "#ffbb78",
          "#e377c2",
          "#8c564b"
        ]
        }
        },
      "opacity": { "value": 0.5}
        }
    }, {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
  
        "encoding": {
          
          "text": {"field": "Country", "type": "nominal"},
          "x": {"field": "GDP_per_capita", "type": "quantitative"}, 
        "y": {"field": "Life_expectancy", "type": "quantitative"}, 
        
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Rwanda'",
              "value": 1
            },
            "value": 0
          },
          
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Life_expectancy","title": "Life expectancy (years)", "type": "quantitative", "format": ","},
            {"field": "GDP_per_capita","title": "GDP per capita (logged value in USD)", "type": "quantitative", "format": ","},
            {"field": "Population_mln" , "title": "Population (million)", "type": "quantitative"}
             ]
        }
      }
    ]
}
  
  